{
  "name": "dragic-monorepo",
  "version": "0.0.1",
  "description": "Dragic Monorepo - Unified Identity Provider and API Services",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@dragic/api",
    "dev:auth": "turbo run dev --filter=@dragic/auth-server",
    "start:api": "turbo run start --filter=@dragic/api",
    "start:auth": "turbo run start --filter=@dragic/auth-server",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"apps/**/*.ts\" \"packages/**/*.ts\"",
    "db:generate": "pnpm --filter @dragic/database db:generate",
    "db:migrate": "pnpm --filter @dragic/database db:migrate",
    "db:push": "pnpm --filter @dragic/database db:push",
    "db:studio": "pnpm --filter @dragic/database db:studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "rimraf": "^5.0.5",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.1.4"
  },
  "packageManager": "pnpm@9.13.0+sha512.beb9e2a803db336c10c9af682b58ad7181ca0fbd0d4119f2b33d5f2582e96d6c0d93c85b23869295b765170fbdaa92890c0da6ada457415039769edf3c959efe"
}
